<!doctype html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Array List</title>
  <meta name="viewport" content="width=device-width">
  <link rel="stylesheet" href="/css/lib/html5bp.css">
  <link rel="stylesheet" href="/css/lib/bootstrap.min.css">
  <link rel="stylesheet" href="/css/lib/dt-bootstrap.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="js/lib/modernizr-2.5.3.js"></script>
</head>
<body>
  <div class="container">
      <h1>Input Report: '<%= input_name %>'</h1>
      <ol class="breadcrumb">
          <li><a href="/">Home</a></li>
          <li class="active">InputReport</li>
      </ol>
      <% inputs.each do | account, values | %>
        <h3><%= account %></h3>
        <table class="table table-striped table-bordered table-hover list-table">
          <thead>
            <tr>
              <th>Server Array</th>
              <th>Input Type</th>
              <th>Input Value</th>
            </tr>
          </thead>
          <tbody>
            <% values.each do | value | %>
              <tr>
                <td><%= arrays.fetch(account).fetch(value.array_id) %></td>
                <td><%= value.input_value.split(':')[0] %></td>
                <td><%= value.input_value.split(':')[1] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
  </div>

  <!-- /container -->

  <script src="/js/lib/jquery-1.7.1.js"></script>
  <script src="/js/lib/bootstrap.min.js"></script>
  <script src="/js/lib/datatables.js"></script>
  <script src="/js/lib/dtBootstrap.js"></script>
  <script src="/app.js"></script>
</body>
</html>
